########################################
# Client (Vite)
########################################
# Public base URL used by the client for API calls
VITE_PUBLIC_BASE_URL=http://localhost:8080

# Firebase Web SDK (obtain from Firebase console)
VITE_FIREBASE_API_KEY=
VITE_FIREBASE_AUTH_DOMAIN=
VITE_FIREBASE_PROJECT_ID=
VITE_FIREBASE_APP_ID=
VITE_FIREBASE_STORAGE_BUCKET=
VITE_FIREBASE_MESSAGING_SENDER_ID=
VITE_FIREBASE_DATABASE_URL=

# App settings
VITE_APP_TIMEZONE=America/Fortaleza
# Use Firebase emulators in dev (1 enables)
VITE_APP_FEATURE_EMULATORS=0

########################################
# Server (Express)
########################################
PORT=8080
PUBLIC_BASE_URL=http://localhost:8080
APP_URL=http://localhost:8080
APP_TIMEZONE=America/Fortaleza
LOG_LEVEL=info
CORS_ALLOW_ORIGINS=
DEFAULT_TENANT_ID=defaultTenant

# Firebase Admin
FIREBASE_PROJECT_ID=
# For production, point to a service account JSON file path
# GOOGLE_APPLICATION_CREDENTIALS=/absolute/path/to/service-account.json

# Stripe (optional; enables billing routes)
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
STRIPE_PRODUCT_ID=
STRIPE_PRICE_ID=
